<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Network Security Configuration for Link2Ur
  - 强制使用 HTTPS（禁止 cleartext traffic）
  - 允许 debug 构建中的本地调试流量
-->
<network-security-config>
    <!-- 默认: 仅允许 HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Debug 构建: 允许 localhost cleartext（用于本地调试） -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>

    <!-- 允许 API 域名的 cleartext（仅在需要时启用） -->
    <!-- 
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
    -->
</network-security-config>
