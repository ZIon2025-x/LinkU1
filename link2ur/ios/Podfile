# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Stripe Connect Embedded Components
  pod 'StripeConnect'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # 统一最低 iOS 部署目标为 12.0，满足 Xcode 支持的 12.0–26.2.99 范围
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end

    # 仅处理有编译源的原生 target（跳过 Pods-Runner 等 aggregate target）
    next unless target.respond_to?(:source_build_phase) && target.source_build_phase

    # 1. 将误加入 Compile Sources 的 PrivacyInfo.xcprivacy 移出（避免 no rule to process）
    target.source_build_phase.files.each do |build_file|
      next unless build_file.file_ref
      path = build_file.file_ref.path.to_s
      next unless path.end_with?('PrivacyInfo.xcprivacy')
      file_ref = build_file.file_ref
      build_file.remove_from_project
      resources_phase = target.build_phases.find { |p| p.respond_to?(:name) && p.name == 'Resources' }
      if resources_phase && resources_phase.respond_to?(:add_file_reference)
        in_resources = resources_phase.files.any? { |f| f.file_ref && f.file_ref.path == file_ref.path }
        resources_phase.add_file_reference(file_ref) unless in_resources
      end
    end

    # 2. fluwx 需要能找到 WechatOpenSDK 的 WXApi.h
    if target.name == 'fluwx'
      wechat_headers = [
        '"${PODS_ROOT}/WechatOpenSDK-XCFramework/WechatOpenSDK.xcframework/ios-arm64/WechatOpenSDK.framework/Headers"',
        '"${PODS_ROOT}/WechatOpenSDK-XCFramework/WechatOpenSDK.xcframework/ios-arm64_x86_64-simulator/WechatOpenSDK.framework/Headers"'
      ].join(' ')
      target.build_configurations.each do |config|
        existing = config.build_settings['HEADER_SEARCH_PATHS'] || '$(inherited)'
        config.build_settings['HEADER_SEARCH_PATHS'] = "#{existing} #{wechat_headers}"
      end
    end
  end

  # 将 Pods 工程本身的部署目标也设为 12.0
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
  end

  installer.pods_project.save
end
