# Railway生产环境配置示例
# 在Railway控制台中设置这些环境变量

# 数据库配置 - Railway会自动提供
# DATABASE_URL=postgresql+psycopg2://postgres:password@containers-us-west-xxx.railway.app:5432/railway
# ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@containers-us-west-xxx.railway.app:5432/railway

# JWT安全配置 - 生产环境必须设置强随机SECRET_KEY
SECRET_KEY=your-super-secure-random-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
CLOCK_SKEW_TOLERANCE=300

# Redis配置 - Railway会自动提供
# REDIS_URL=redis://default:password@containers-us-west-xxx.railway.app:6379
USE_REDIS=true

# Cookie安全配置 - 生产环境
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_DOMAIN=your-app.railway.app

# CORS配置 - 包含Vercel前端域名
ALLOWED_ORIGINS=https://www.link2ur.com,https://your-app.vercel.app,https://your-app-git-main.vercel.app

# 邮箱配置 - 用于用户注册验证
EMAIL_FROM=no-reply@link2ur.com
SMTP_SERVER=smtp.link2ur.com
SMTP_PORT=587
SMTP_USER=no-reply@link2ur.com
SMTP_PASS=your-email-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# 开发环境配置 - 跳过邮件验证（生产环境建议设为false）
SKIP_EMAIL_VERIFICATION=true

# 基础URL配置
BASE_URL=https://api.link2ur.com
FRONTEND_URL=https://www.link2ur.com

# 文件存储配置
USE_CLOUD_STORAGE=false
# 如果使用云存储，设置为true并配置相应的云存储服务
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# 环境配置
ENVIRONMENT=production

# 端口配置 - Railway自动设置
PORT=8000
