# Railway生产环境配置示例
# 在Railway控制台中设置这些环境变量

# 数据库配置 - Railway会自动提供
# DATABASE_URL=postgresql+psycopg2://postgres:password@containers-us-west-xxx.railway.app:5432/railway
# ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@containers-us-west-xxx.railway.app:5432/railway

# JWT安全配置 - 生产环境必须设置强随机SECRET_KEY
SECRET_KEY=your-super-secure-random-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
CLOCK_SKEW_TOLERANCE=300

# Redis配置 - Railway会自动提供
# REDIS_URL=redis://default:password@containers-us-west-xxx.railway.app:6379
USE_REDIS=true

# Cookie安全配置 - 生产环境
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_DOMAIN=your-app.railway.app

# CORS配置 - 包含Vercel前端域名
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-app-git-main.vercel.app

# 端口配置 - Railway自动设置
PORT=8000
